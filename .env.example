# Database Configuration
DATABASE_URL=postgresql+asyncpg://fast_zero_user:fast_zero_password@localhost:5432/fast_zero
TEST_DATABASE_URL=postgresql+asyncpg://fast_zero_user:fast_zero_password@localhost:5432/fast_zero_test

# Application Configuration
APP_NAME=FastAPI Zero
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Password Security
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGITS=true
PASSWORD_REQUIRE_SPECIAL=true

# Rate Limiting
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_WINDOW_MINUTES=15

# Account Security
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30

# Google OAuth2 Configuration (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback
GOOGLE_DISCOVERY_URL=https://accounts.google.com/.well-known/openid_configuration

# API Configuration
API_V1_STR=/api/v1